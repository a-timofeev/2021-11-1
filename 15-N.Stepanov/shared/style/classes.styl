@import "theme.styl"

.center
    display flex
    justify-content center
    align-items center
    & > *
        margin-left auto
        margin-right auto

.rounded
    border-radius 8px

.spaced-out
    margin space(1)

.spaced-out2
    margin space(2)

.spaced-out3
    margin space(3)

.hidden
    display none

.shadow
    shadow()

.glassy-bg
    background-color rgba(#FFF, 0.75)
    backdrop-filter blur(3px)

.absolute
    position absolute
    top 0
    left 0

.smaller
    font-size 14px

.lighten
    color $text-lighten

.secondary
    background-color $secondary

.flex
    display flex

.grow
    flex-grow 1

.full-width
    width 100%

